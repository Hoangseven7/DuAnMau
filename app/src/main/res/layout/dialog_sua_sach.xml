<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6821F34E"
        android:orientation="horizontal"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">
            <TextView
                android:textSize="25dp"
                android:textColor="#333333"
                android:text="Tên Sách:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:textStyle="bold"
                android:hint="Nhập Tên Sách"
                android:id="@+id/dialog_edtSua_TenSach_Sach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Giá Sách"
                android:textSize="25dp"
                android:textColor="#333333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:textStyle="bold"
                android:hint="Nhập Giá Sách"
                android:id="@+id/dialog_edtSua_GiaSach_sach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="25dp"
                android:textColor="#333333"
                android:text="Loại Sách"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/dialog_spn_SuaLoaiSach_Sach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>