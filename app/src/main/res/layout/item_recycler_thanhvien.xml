<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">
  <LinearLayout
      android:id="@+id/item_Adapter_thanhvien"
      android:minHeight="180dp"
      android:gravity="center"
      android:padding="10dp"
      android:background="#68E487"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">
      <LinearLayout
          android:layout_weight="9"
          android:padding="10dp"
          android:background="#68E495"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <TextView
              android:textSize="25dp"
              android:id="@+id/txtMaTV_ThanhVien"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
          <TextView
              android:textSize="25dp"
              android:id="@+id/txtHotenTV_ThanhVien"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
          <TextView
              android:textSize="25dp"
              android:id="@+id/txtNamSinhTV_ThanhVien"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
      </LinearLayout>
      <ImageView
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:src="@drawable/delete"
          android:id="@+id/img_delete_thanhvien"
         />
  </LinearLayout>
</androidx.cardview.widget.CardView>